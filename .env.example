# FastAPI E-commerce API - Environment Variables
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="E-commerce API"
VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=sqlite:///./ecommerce.db
# For PostgreSQL: DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Phase 5: Advanced Features Settings

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS Settings (for frontend integration)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (for notifications)
ADMIN_EMAIL=admin@example.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
EMAIL_FROM=noreply@ecommerce-api.com

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Production Settings (uncomment and set for production deployment)
# DEBUG=false
# DATABASE_URL=postgresql://production_user:production_password@db_host:5432/production_db
# SECRET_KEY=production-secret-key-very-long-and-secure
# CORS_ORIGINS=["https://your-frontend-domain.com"]
# REDIS_HOST=redis-production-host
# SMTP_HOST=smtp.your-email-provider.com
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password